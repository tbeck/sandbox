---
layout: null
---
[
{% for recipe in site.recipes %}
  {
    "slug": "{{ recipe.name | slugify }}",
    "name": "{{ recipe.name }}",
    "description": "{{ recipe.description }}",
    "url": "{{ recipe.url }}",
    "image": "{{ recipe.image }}",
    "ingredients": "{% for ingredient in recipe.ingredients %}{{ ingredient.name | replace_regex: '\W+', ' ' }}{% unless forloop.last %},{% endunless %}{% endfor %}",
    "tags": "{% for tag in recipe.tags %}{{ tag }}{% unless forloop.last %},{% endunless %}{% endfor %}",
    "products": [
      {% for product in recipe.products %}
      {
        "name": "{{ product.name }}",
        "url": "{{ product.url }}"
      }
      {% unless forloop.last %},{% endunless %}
      {% endfor %}
    ]
  }{% unless forloop.last %},{% endunless %}
{% endfor %}
]