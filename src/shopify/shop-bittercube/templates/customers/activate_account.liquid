<section>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="content text-center">
          <h1>{{ 'customer.activate_account.title' | t }}</h1>
          <p>{{ 'customer.activate_account.subtext' | t }}</p>
          <div class="form-vertical">
            {% form 'activate_customer_password' %}

              {{ form.errors | default_errors }}
              <div class="form-group">
                <label for="CustomerPassword" class="label--hidden">{{ 'customer.activate_account.password' | t }}</label>
                <input type="password" value="" name="customer[password]" id="CustomerPassword" placeholder="{{ 'customer.activate_account.password' | t }}" class="form-control">
              </div>

              <div class="form-group">
                <label for="CustomerPasswordConfirmation" class="label--hidden">{{ 'customer.activate_account.password_confirm' | t }}</label>
                <input type="password" value="" name="customer[password_confirmation]" id="CustomerPasswordConfirmation" placeholder="{{ 'customer.activate_account.password_confirm' | t }}" class="form-control">
              </div>

              <input type="submit" class="button" value="{{ 'customer.activate_account.submit' | t }}">
              <div><input type="submit" name="decline" class="button" value="{{ 'customer.activate_account.cancel' | t }}"></div>
            {% endform %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
      
